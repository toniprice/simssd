linters: lintr::all_linters() # See vignette("lintr")
encoding: "UTF-8"
exclusions: list(
    "renv",
    "vignettes",
    # Test files
    "tests/testthat.R" = list(
      undesirable_function_linter = 9:10,
      unused_import_linter = 10
    ),
    "tests/testthat/test-helpers-checkmate.R" = list(
      implicit_integer_linter = Inf
    ),
    "tests/testthat/test-helpers-cli.R" = list(
      implicit_integer_linter = Inf
    ),
    "tests/testthat/test-helpers-package.R" = list(
      implicit_integer_linter = Inf
    )
  )
